<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>All Movies</title>
</head>
<body>
  <h2>All Movies</h2>
  <table>
    <tr>
      <th>Title</th>
      <th>Year<br>Released</th>
      <th>Rating</th>
      <th>Cast</th>
      <th>Now<br>Showing</th>
      <th></th>
    </tr>
    <% movies.forEach(function(m) { %>
      <tr>
        <td><%= m.title %></td>
        <td><%= m.releaseYear %></td>
        <td><%= m.rating %></td>
        <td><%= m.cast.join(', ') %></td>
        <td><%= m.nowShowing ? 'Yes' : 'No' %></td>
        <td>
          <a href="/movies/<%= m.id %>/edit">edit</a> | 
          <a href="/movies/<%= m.id %>?_method=DELETE">delete</a>
          <!-- if the above does not work, try using a form like below -->
          <!--
          <form method="POST" action="/movies/<%= m.id %>?_method=DELETE">
            <button type="submit">delete</button>
          </form>
          -->
        </td>
      </tr>
    <% }); %>
  </table>
</body>
</html>